{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "LA LICORERA",
  "version": "0.1.0",
  "identifier": "com.diegocoron.lalicorera",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:8080",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "LA LICORERA Flow Manager",
        "width": 1280,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi"],
    "icon": ["icons/icon.ico"],
    "resources": [
      "backend-api.exe",
      "assets/licorera.db"
    ],
    "windows": {
      "wix": {
        "language": "es-ES"
      }
    }
  }
}