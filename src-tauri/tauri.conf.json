{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "LA LICORERA",
  "version": "0.1.0",
  "identifier": "com.diegocoron.lalicorera",
  "build": {
    "frontendDist": "../dist",       
    "devUrl": "http://localhost:8080",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "LA LICORERA",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi"],
    "icon": ["icons/icon.ico"],
    "resources": ["assets/licorera.db"]
  }
}
